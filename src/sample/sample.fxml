<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<HBox prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <AnchorPane maxHeight="-Infinity" maxWidth="400.0" minHeight="-Infinity" minWidth="400.0" prefHeight="600.0" prefWidth="400.0">
         <children>
            <AnchorPane fx:id="TopPane" prefHeight="150.0" prefWidth="400.0" style="-fx-background-color: #7598C2;">
               <children>
                  <Text layoutX="15.0" layoutY="34.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Chat" textAlignment="CENTER">
                     <font>
                        <Font size="31.0" />
                     </font>
                  </Text>
                  <Circle fx:id="Status" fill="DODGERBLUE" layoutX="99.0" layoutY="124.0" radius="14.0" stroke="BLACK" strokeType="INSIDE" />
                  <TextField fx:id="Adress" layoutX="14.0" layoutY="50.0" onAction="#getAdress" prefHeight="25.0" prefWidth="170.0" promptText="adress" />
                  <TextField fx:id="Port" layoutX="14.0" layoutY="81.0" onAction="#getPort" prefHeight="25.0" prefWidth="170.0" promptText="port" />
                  <Button fx:id="TryConnect" layoutX="14.0" layoutY="111.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="Connect" />
               </children>
            </AnchorPane>
            <StackPane fx:id="getNamePane" layoutY="149.0">
               <children>
                  <AnchorPane fx:id="nickNamePAne" prefHeight="50.0" prefWidth="400.0">
                     <children>
                        <Text layoutX="14.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your name" wrappingWidth="143.13671875">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Text>
                        <TextField fx:id="nickName" disable="true" layoutX="166.0" layoutY="7.0" onAction="#GetName" prefHeight="39.0" prefWidth="227.0" promptText="Введите имя и нажмите enter">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextField>
                     </children>
                  </AnchorPane>
               </children>
            </StackPane>
            <StackPane fx:id="outPane" layoutX="6.0" layoutY="550.0" prefHeight="50.0" prefWidth="388.0">
               <children>
                  <TextField fx:id="outMessage" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#sendMessage" prefHeight="39.0" prefWidth="390.0" />
               </children>
            </StackPane>
            <ScrollPane fx:id="ScrollBar" focusTraversable="false" layoutX="6.0" layoutY="205.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="345.0" prefWidth="388.0" style="-fx-background-color: white;">
               <content>
                  <TextFlow fx:id="allMessage" focusTraversable="true" prefHeight="344.0" prefWidth="376.0" style="-fx-background-color: white;">
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextFlow>
               </content>
            </ScrollPane>
         </children>
      </AnchorPane>
   </children>
</HBox>
